{
  "name": "http-client-action",
  "version": "1.0.0",
  "private": true,
  "description": "GitHub Action that allows to specify a server endpoint & GraphQL query to execute.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest --clearCache && jest",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CamiloGarciaLaRotta/http-client-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Camilo Garcia La Rotta",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.3.0",
    "axios": "^0.21.1",
    "node-notifier": ">=10.0.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.1",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "@zeit/ncc": "^0.22.0",
    "acorn": ">=8.2.1",
    "eslint": "^6.8.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-github": "^4.1.2",
    "eslint-plugin-jest": "^24.3.6",
    "flow-bin": "^0.149.0",
    "graphql": "^15.5.0",
    "jest": "^25.5.4",
    "jest-circus": "^26.6.1",
    "kind-of": ">=6.0.3",
    "minimist": ">=1.2.2",
    "node-fetch": ">=2.6.1",
    "prettier": "^2.2.1",
    "ts-jest": "^25.5.1",
    "typescript": "^3.9.9"
  }
}
